#!/bin/sh

check() {
    mail -H | \
	awk '
    NR == 2 {
        for (i = 5; i <= NF; i += 2) {
	    if ($i == "new") new = $(i - 1)
	    else if ($i == "unread") unread = $(i - 1)
	}
	exit
    }

    END {
        if (new > 0) print "new"
	else if (unread > 0) print "unread"
	else print "nil"
    }'
    wait_on "$MAIL"
}

while true; do check; done | \
while read status; do
  case $status in
    new)
      echo 'mymailbox:set_markup("<span foreground=\"red\" font_weight=\"bold\">MAIL</span>")' | awesome-client
      ;;
    unread)
      echo 'mymailbox:set_markup("<span foreground=\"yellow\">MAIL</span>")' | awesome-client
      ;;
    *)
  esac
done
